{
    "openapi": "3.0.0",
    "info": {
      "title": "Trello Clone API",
      "version": "1.0.0",
      "description": "API documentation for Trello Clone Project"
    },
    "servers": [
      {
        "url": "http://localhost:3055/v1/api",
        "description": "Local server"
      }
    ],
    "paths": {
      "/users/signup": {
        "post": {
          "summary": "User Signup",
          "tags": ["Auth"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserSignup"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "User created"
            },
            "400": {
              "description": "Bad request"
            }
          }
        }
      },
      "/users/login": {
        "post": {
          "summary": "User Login",
          "tags": ["Auth"],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserLogin"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Login successful"
            },
            "401": {
              "description": "Unauthorized"
            }
          }
        }
      },
      "/boards/create": {
        "post": {
          "summary": "Create Board",
          "tags": ["Board"],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateTask"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Task created"
            },
            "400": {
              "description": "Invalid input"
            },
            "403": {
              "description": "Forbidden"
            }
          }
        }
      },
      "/tasks/create": {
        "post": {
          "summary": "Create Task",
          "tags": ["Task"],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateTask"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Task created"
            },
            "400": {
              "description": "Invalid input"
            },
            "403": {
              "description": "Forbidden"
            }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      },
      "schemas": {
        "UserSignup": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "example": "Trang"
            },
            "email": {
              "type": "string",
              "example": "trang@example.com"
            },
            "password": {
              "type": "string",
              "example": "123456"
            }
          },
          "required": ["email", "password"]
        },
        "UserLogin": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "example": "trang@example.com"
            },
            "password": {
              "type": "string",
              "example": "123456"
            }
          },
          "required": ["email", "password"]
        },
        "CreateTask": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "example": "issue"
            },
            "payload": {
              "type": "object",
              "example": {
                "title": "Fix bug login",
                "description": "Fix the login failure in Chrome",
                "boardId": "64c8abf...",
                "columnId": "12a9..."
              }
            }
          },
          "required": ["type", "payload"]
        }
      }
    }
  }
  